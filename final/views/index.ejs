<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gesti√≥n de Usuarios</title>
    <link rel="stylesheet" href="/styles/stylesindex.css">
</head>

<body>

    <h2>Agregar Usuario</h2>
    <form action="/add" method="post">
        <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" name="name" id="name" maxlength="45" required>
        </div>

        <div class="form-group">
            <label for="email">Correo</label>
            <input type="text" name="email" id="email" maxlength="45">
        </div>

        <button type="submit">Agregar</button>
    </form>

    <div class="container">
        <h1>Lista de Usuarios</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.id %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td class="actions">
                            <a href="/edit/<%= user.id %>" class="edit-link">Editar</a>
                            <a href="/delete/<%= user.id %>" class="delete-link">Eliminar</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>


    </div>
</body>

</html>